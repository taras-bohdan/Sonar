{
  "name": "sonar-server",
  "version": "1.0.0",
  "license": "MIT",
  "repository": "https://github.com/taras-bohdan/Sonar",
  "scripts": {
    "client": "cd ../client && yarn start",
    "server": "nodemon",
    "start": "nodemon",
    "dev": "concurrently --kill-others-on-fail \"yarn server\" \"yarn client\"",
    "test": "jest app",
    "coverage": "jest --collectCoverageFrom=app/**.js --coverage app",
    "lint": "eslint --ext=js ./app"
  },
  "dependencies": {
    "@koa/cors": "^2.2.2",
    "apollo-server-koa": "^2.1.0",
    "bcrypt": "^3.0.2",
    "cap": "^0.2.0",
    "dotenv": "^6.1.0",
    "graphql": "^0.13.0",
    "graphql-tools": "^4.0.2",
    "jsonwebtoken": "^8.3.0",
    "koa": "^2.5.3",
    "koa-bodyparser": "^4.2.1",
    "koa-compose": "^4.1.0",
    "koa-router": "^7.4.0",
    "mongoose": "^5.3.4",
    "pcap-parser": "^0.2.1",
    "winston": "^3.1.0",
    "winston-daily-rotate-file": "^3.3.3"
  },
  "devDependencies": {
    "@babel/polyfill": "^7.0.0",
    "babel-eslint": "^10.0.1",
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "concurrently": "^4.0.1",
    "eslint": "^5.7.0",
    "eslint-plugin-import": "^2.14.0",
    "jest": "^23.6.0"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "modules": "commonjs"
        }
      ]
    ]
